<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Download Assignment</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif; /* Use Google Font Poppins */
            background-color: #f0f4f8; /* Light blue-gray background */
            color: #333; /* Dark gray text color */
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #28a745; /* Green color */
            margin-bottom: 20px;
        }
        form {
            max-width: 600px;
            margin: 0 auto 30px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        select, button {
            display: block;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            margin-bottom: 15px;
            border: 1px solid #ddd; /* Light gray border */
            border-radius: 4px;
            box-sizing: border-box;
        }
        select {
            background-color: #f9fafb; /* Slightly lighter background */
        }
        button {
            background-color: #28a745; /* Green color */
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        button:hover {
            background-color: #218838; /* Darker green shade on hover */
            transform: scale(1.02); /* Slightly enlarge on hover */
        }
        hr {
            border: 0;
            height: 1px;
            background: #ddd;
            margin: 20px 0;
        }
        ul {
            list-style-type: none;
            padding: 0;
            max-width: 600px;
            margin: 0 auto;
        }
        li {
            margin-bottom: 15px;
            padding: 20px;
            background-color: #fff; /* White background */
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }
        li:hover {
            transform: translateY(-5px); /* Slight lift on hover */
        }
        strong {
            font-weight: bold;
        }
        a {
            color: #28a745; /* Green color */
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
            transition: color 0.3s ease;
        }
        a:hover {
            color: #218838; /* Darker green shade on hover */
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Download Assignment</h1>

    <!-- Select subject form -->
    <form method="post" action="/download_assignment">
        <label for="subjectSelect">Select Subject:</label>
        <select id="subjectSelect" name="subject">
            <% subjects.forEach(subject => { %>
                <option value="<%= subject %>"><%= subject %></option>
            <% }); %>
        </select>
        <button type="submit">Show Notes</button>
    </form>

    <hr>

    <!-- Display uploaded assignment -->
    <h2>Uploaded Assignment</h2>
    <ul>
        <% if (assignment.length === 0) { %>
            <li>No assignment uploaded yet for this subject.</li>
        <% } else { %>
            <% assignment.forEach(assign => { %>
                <li>
                    <strong>Teacher Name:</strong> <%= assign.teacher_name %><br>
                    <strong>Assigment:</strong> <%= assign.assignment %><br>
                    <a href="/<%= assign.filePath %>"   target="_blank">Download Assignment</a>
                </li>
            <% }); %>
        <% } %>
    </ul>
</body>
</html>
